{
  "minimum-stability": "stable",
  "require": {
    "php": ">=5.4.0",
    "callmez/we8": "dev-master",
    "yiisoft/yii2": "~2.0.16.1",
    "yiisoft/yii2-bootstrap": "~2.0.0",
    "yiisoft/yii2-gii": "^2.0",
    "weikit/wechat-sdk": "^0.0.3",
    "overtrue/pinyin": "^4.0",
    "symfony/finder": "^4.2"
  },
  "require-dev": {
    "yiisoft/yii2-debug": "~2.0.0"
  },
  "config": {
    "process-timeout": 1800,
    "fxp-asset": {
      "enabled": false
    }
  },
  "autoload": {
    "psr-0": {
      "WeBase": "./core/addon/Base"
    },
    "psr-4": {
      "weikit\\": "./"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "yii\\composer\\Installer::postInstall"
    ],
    "post-create-project-cmd": [
      "yii\\composer\\Installer::postCreateProject",
      "yii\\composer\\Installer::postInstall"
    ]
  },
  "extra": {
    "yii\\composer\\Installer::postCreateProject": {
      "setPermission": [
        {
          "runtime": "0777",
          "web/assets": "0777",
          "yii": "0755"
        }
      ]
    },
    "yii\\composer\\Installer::postInstall": {
      "generateCookieValidationKey": [
        "config/web.php"
      ]
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ]
}
